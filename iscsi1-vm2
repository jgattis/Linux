cat > /etc/iscsi/initiatorname.iscsi << EOF
InitiatorName=iqn.2014-06.com.example:vm2
EOF
systemctl restart iscsid
systemctl restart iscsi
systemctl enable iscsid
systemctl enable iscsi
iscsiadm -m discovery -t sendtargets -p 10.0.0.100:3260
iscsiadm -m node -T iqn.2014-06.com.example:remotedisk1 -p 10.0.0.100:3260 -l
fdisk /dev/sda << EOF
n




w
EOF
partprobe
mkfs.xfs /dev/sda1
yum -y install autofs
cd /etc/
wget https://raw.githubusercontent.com/jgattis/Linux/master/auto.master
cd ~
myuuid=$(blkid | grep sda | awk -F " " '{print $2}')
echo -e "iscsi\t-fstype=xfs\t$myuuid" >> /etc/auto.misc
echo -e "nfsshare -fstype=nfs,rw vm1:/nfsshare" >> /etc/auto.misc
echo -e "smbshare -fstype=cifs,rw,credentials=/root/smb-cred.txt,uid=1000,gid=1000 ://vm1/smbshare" >> /etc/auto.misc
systemctl enable autofs
systemctl start autofs
